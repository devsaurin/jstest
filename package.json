{ "name"            : "jstest"
, "description"     : "The cross-platform JavaScript test framework"
, "homepage"        : "http://jstest.jcoglan.com"
, "author"          : "James Coglan <jcoglan@gmail.com> (http://jcoglan.com/)"
, "keywords"        : ["testing"]
, "license"         : "MIT"

, "version"         : "4.0.0"
, "engines"         : {"node": ">=0.4.0"}
, "main"            : "./jstest"
, "bin"             : {"jstest": "./bin/jstest"}
, "preferGlobal"    : true
, "devDependencies" : {"jsbuild": "", "jsclass": "4.0.0", "buster": "", "karma": "", "testem": "", "wake": ""}

, "scripts"         : { "build" : "./node_modules/.bin/jsbuild -m node_modules/jsclass/src/loader.js -s JS.Test > lib/jstest.js && ./node_modules/.bin/wake"
                      , "clean" : "rm -rf build lib/jstest.js"
                      }

, "repository"      : { "type"  : "git"
                      , "url"   : "git://github.com/jcoglan/jstest.git"
                      }

, "bugs"            : "http://github.com/jcoglan/jstest/issues"

, "wake": {
    "javascript": {
      "sourceDirectory":  "lib",
      "targetDirectory":  "build",
      "builds": {
        "src": {"minify": false, "suffix": false}
      },
      "targets": {
        "jstest": [       "jstest",
                          "reporters/_head",
                          "reporters/buster",
                          "reporters/karma",
                          "reporters/progress",
                          "reporters/spec",
                          "reporters/tap",
                          "reporters/tapyj",
                          "reporters/teabag",
                          "reporters/testem",
                          "reporters/xml",
                          "reporters/_tail"
        ]
      }
    },
    "binary": {
      "sourceDirectory":  ".",
      "targetDirectory":  "build",
      "targets": {
        "package.json": "",
        "README.md": "",
        "bin/jstest": ""
} } } }

