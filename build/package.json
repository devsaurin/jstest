{ "name"            : "jstest"
, "description"     : "The cross-platform JavaScript test framework"
, "homepage"        : "http://jstest.jcoglan.com"
, "author"          : "James Coglan <jcoglan@gmail.com> (http://jcoglan.com/)"
, "keywords"        : ["testing"]
, "license"         : "MIT"

, "version"         : "1.0.0"
, "engines"         : {"node": ">=0.4.0"}
, "main"            : "./jstest"
, "bin"             : {"jstest": "./bin/jstest"}
, "preferGlobal"    : true
, "devDependencies" : { "jsbuild": ""
                      , "jsclass": "4.0.0"
                      , "wake": ""
                      , "buster": ""
                      , "karma": ""
                      , "testem": ""
                      }

, "scripts"         : { "build" : "jsbuild -m node_modules/jsclass/src/loader.js -s JS.Test > lib/jstest.js && wake"
                      , "clean" : "rm -rf build lib/jstest.js"
                      }

, "repository"      : { "type"  : "git"
                      , "url"   : "git://github.com/jcoglan/jstest.git"
                      }

, "bugs"            : "http://github.com/jcoglan/jstest/issues"

, "wake": {
    "javascript": {
      "sourceDirectory":  "lib",
      "targetDirectory":  "build",
      "builds": {
        "src": {"minify": false, "suffix": false}
      },
      "targets": {
        "jstest": [       "jstest",
                          "reporters/_head",
                          "reporters/buster",
                          "reporters/karma",
                          "reporters/progress",
                          "reporters/spec",
                          "reporters/tapyj",
                          "reporters/teabag",
                          "reporters/testem",
                          "reporters/xml",
                          "reporters/_tail"
        ]
      }
    },
    "binary": {
      "sourceDirectory":  ".",
      "targetDirectory":  "build",
      "targets": {
        "package.json": "",
        "README.md": "",
        "bin/jstest": ""
  } } }

, "testling": {
    "scripts": [
      "build/jstest.js",
      "example/lib/set.js",
      "examples/spec/set_spec.js",
      "examples/testling.js"
    ],
    "browsers": {
      "chrome":   [25],
      "iexplore": [6, 7, 8, 9, 10],
      "ipad":     [6.0],
      "iphone":   [6.0],
      "firefox":  [3.6, 19],
      "opera":    [10.5, 11.6, 12.0],
      "safari":   [5.1, 6.0]
    }
  }
}

